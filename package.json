{
  "name": "banx",
  "version": "0.0.1",
  "description": "A web application for managing problems hosted by ximera.",
  "repository": {
    "type": "git",
    "url": "."
  },
  "main": "main.ts",
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc --watch",
    "ng-build-watch": "cd banx-app && ng build --watch",
    "start": "node ./bin/www",
    "nodemon": "nodemon --signal SIGTERM ./bin/www",
    "dev": "npm run ng-build-watch & npm run build-watch & npm run nodemon",
    "prod": "npm run build && npm run start",
    "test": "node ./bin/tests.js",
    "cli": "node ./bin/cli.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "btoa": "^1.2.1",
    "commander": "^2.19.0",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "jquery": "^3.3.1",
    "mongodb": "^3.1.12",
    "morgan": "~1.9.0",
    "popper.js": "^1.14.7",
    "pug": "^2.0.3"
  },
  "devDependencies": {
    "@types/btoa": "^1.2.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.1",
    "@types/http-errors": "^1.6.1",
    "@types/mongodb": "^3.1.19",
    "@types/morgan": "^1.7.35"
  }
}
