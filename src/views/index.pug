    // Workarounds (ugly hacks) for including Buffer in the angular
    // polyfills.
    if (undefined === global) var global = window;
    if (undefined === process) var process = {};
  script(src="./public/mathjax/MathJax.js?config=TeX-MML-AM_CHTML")
  script(type="text/x-mathjax-config") MathJax.Hub.Config({ tex2jax: {inlineMath: [ ['$', '$'], ['\\(', '\\)'] ]} })
  script(src="./public/banx-app/runtime.js")
  script(src="./public/banx-app/es2015-polyfills.js")
  script(src="./public/banx-app/polyfills.js")
  script(src="./public/banx-app/styles.js")
  script(src="./public/banx-app/vendor.js")
  script(src="./public/banx-app/main.js")
